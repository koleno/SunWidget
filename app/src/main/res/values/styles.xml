<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Style for texts in the widget -->
    <style name="SWTextWidget">
        <item name="android:textSize">@dimen/text_size_widget</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <!-- Location button style -->
    <style name="SWLocationButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:minWidth">0dp</item>
    </style>
</resources>
