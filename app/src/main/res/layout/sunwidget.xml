<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/background"
    android:gravity="center_horizontal|center_vertical"
    android:padding="@dimen/padding_widget"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_widget_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:paddingRight="@dimen/padding_widget"
        android:paddingLeft="@dimen/padding_widget"
        android:columnCount="2"
        android:rowCount="2">


        <TextView
            android:id="@+id/text_sunrise_name"
            android:paddingRight="@dimen/padding_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/StyleTextWidget"
            android:text="@string/sunrise" />

        <TextView
            android:id="@+id/text_sunrise_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/StyleTextWidget"
            android:text="@string/not_available" />

        <TextView
            android:id="@+id/text_sunset_name"
            android:paddingRight="@dimen/padding_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/StyleTextWidget"
            android:text="@string/sunset" />

        <TextView
            android:id="@+id/text_sunset_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/StyleTextWidget"
            android:text="@string/not_available" />

    </GridLayout>

    <ImageButton
        android:id="@+id/button_refresh"
        android:background="@color/color_background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_refresh"/>

</LinearLayout>